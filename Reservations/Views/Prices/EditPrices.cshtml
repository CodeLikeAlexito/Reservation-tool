@model Reservations.ViewModels.Prices.PricesVM
@{
    ViewBag.Title = "EditPrices";
    Layout = "~/Views/_LayoutUsers.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        var period = $('#RoomViewId').val();
        $('#roomViewIdList').val(period);
    });
</script>
<br />

@using (Html.BeginForm())
{
<div class="container">
    @Html.HiddenFor(m => m.PricesModel.ID)
    <table class="table table-hover table-sm">
        <tr>
            <td>Описание на стая </td>
            <td>
                @Html.Hidden("RoomViewId", Model.PricesModel.RoomView, new { @id = "RoomViewId" })
                @Html.DropDownListFor(m => m.PricesModel.RoomView, Model.RoomViewList, "Изберете описание на стая", new { @class = "form-control-sm", @id = "roomViewIdList", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.RoomView, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Възраст на гост </td>
            <td>
                @Html.Hidden("PersonTypeId", Model.PricesModel.PersonType, new { @id = "PersonTypeId" })
                @Html.DropDownListFor(m => m.PricesModel.PersonType, Model.PersonTypeList, "Изберете тип гост", new { @class = "form-control-sm", @id = "personTypeIdList", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.PersonType, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Цена </td>
            <td>
                @Html.EditorFor(m => m.PricesModel.Price, new { @class = "form-control-sm", @id = "priceId", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.Price, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Такса </td>
            <td>
                @Html.EditorFor(m => m.PricesModel.Tax, new { @class = "form-control-sm", @id = "taxId", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.Tax, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Общо </td>
            <td>
                @Html.EditorFor(m => m.PricesModel.Total, new { @class = "form-control-sm", @id = "totalId", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.Total, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Сезон </td>
            <td>
                @Html.Hidden("SeasonId", Model.PricesModel.Season, new { @id = "SeasonId" })
                @Html.DropDownListFor(m => m.PricesModel.Season, Model.SeasonList, "Изберете сезон", new { @class = "form-control-sm", @id = "seasonIdList", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.Season, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Служител </td>
            <td>
                @Html.Hidden("ucbId", Model.PricesModel.UCB, new { @id = "ucbId" })
                @Html.DropDownListFor(m => m.PricesModel.UCB, Model.UCBList, "Изберете сезон", new { @class = "form-control-sm", @id = "ucbIdList", @style = "width:800px;" })
                @Html.ValidationMessageFor(m => m.PricesModel.UCB, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>


    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-3">
            <div class="form-btn">
                <input class="btn btn-outline-success btn-block" id="submitUpdateBtn" type="submit" name="button" value="Запази промяни" />
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-btn">
                <input class="btn btn-outline-danger btn-block" type="submit" name="button" value="Отказ" />
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>


    <div id="messageBox" style="display:none">

        <p>gfsafsafsa</p>

    </div>



</div>
}